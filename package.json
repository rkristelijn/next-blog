{
	"name": "next-blog",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/rkristelijn/next-blog.git"
	},
	"homepage": "https://next-blog.rkristelijn.workers.dev",
	"scripts": {
		"dev": "next dev --turbopack",
		"prebuild": "node scripts/generate-posts-data.js && node scripts/optimize-for-workers.js",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"ci:build": "opennextjs-cloudflare build",
		"deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
		"preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
		"init-worker": "node scripts/init-cloudflare-worker.js",
		"diagnose": "node scripts/diagnose.js",
		"sync-fork": "bash scripts/sync-with-fork.sh",
		"check-forks": "bash scripts/check-fork-health.sh",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest --watch",
		"ci:test": "vitest run",
		"pre-commit": "npm run lint && npm run test:run && npx tsc --noEmit",
		"validate": "npm run pre-commit && npm run build"
	},
	"dependencies": {
		"@emotion/cache": "^11.14.0",
		"@emotion/react": "^11.14.0",
		"@emotion/styled": "^11.14.1",
		"@mui/icons-material": "^7.2.0",
		"@mui/material": "^7.2.0",
		"@mui/material-nextjs": "^7.2.0",
		"@opennextjs/cloudflare": "^1.5.2",
		"gray-matter": "^4.0.3",
		"mermaid": "^11.10.1",
		"next": "15.3.5",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-markdown": "^10.1.0"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^20.19.9",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@vitejs/plugin-react": "^5.0.1",
		"eslint": "^9",
		"eslint-config-next": "15.3.5",
		"jest": "^30.0.5",
		"jest-environment-jsdom": "^30.0.5",
		"jsdom": "^26.1.0",
		"typescript": "^5",
		"vitest": "^3.2.4",
		"wrangler": "^4.25.0"
	},
	"packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
